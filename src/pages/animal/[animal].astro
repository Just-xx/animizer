---
import RandomAnimalBase from '../../layouts/RandomAnimalBase.astro'
import Animal from '../../components/Animal.jsx'

export async function getStaticPaths() {
	const animals = ['dog', 'axolotl', 'cat'];
  return animals.map(animal => ({params: { animal }}));
}

const { animal } = Astro.request.params;

---
<RandomAnimalBase animal={animal}>
	<Animal client:only animal={animal} />
</RandomAnimalBase>